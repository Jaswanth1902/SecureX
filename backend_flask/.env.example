# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
PORT=5000
PUBLIC_BASE_URL=http://127.0.0.1:5000

# Security (Replace with strong random strings)
SECRET_KEY=change_me_to_a_secure_random_string
